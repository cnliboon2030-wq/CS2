
# Student Grade Calculator Code : GradeKeeper

print("==== Welcome to the Grade Calculator ====")

def grade_calculator():
  name = input("Enter your name:")
  print(f"Hello, {name}! Let's calculate your final average together!")

  subjects = int(input("How many subject do you have?"))
  total = 0

  for i in range(1, subjects + 1)
    grade = float(input(f"Enter grade for {i}: "))
    total += grade

average = total / subjects
print(f"\n{name}, your final average grade is : {round(average,2)}")

if average >= 90:
  print("Remark : Keep up the good work!")
elif average >= 80:
  print("Remark : Good job!")
else:
  print("It's alright! Try harder next time.")

print("Thank you for using GradeKeeper!")

  
