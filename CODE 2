# Student Grade Calculator Code : GradeKeeper

def grade_calculator():
  name = input("Enter your name:")
  print("Hello, {name}! Let's calculate your final grade together")

  subjects = int(input("How many subject do you have?"))
  total = 0

  for i in range(1, subjects + 1)
    grade = float(input(f"Enter grade for {i}: "))
    total += grade

average = total / subjects
print(f"\n{name}, your final average grade is : {average}")

if average >= 90:
        print("Remark: Excellent!")
    elif average >= 80:
        print("Remark: Good job!")
    else:
        print("Remark: Needs improvement.")



  
